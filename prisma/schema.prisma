// Prisma schema for cosmetics e-commerce platform
// Database: PostgreSQL 15+
// Generated: Production-ready schema with proper relationships and indexes

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Category model for product organization
model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?
  slug        String    @unique
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@map("categories")
}

// Product model for cosmetics items
model Product {
  id          String     @id @default(cuid())
  name        String
  description String
  price       Decimal    @db.Decimal(10, 2)
  imageUrl    String?
  categoryId  String
  category    Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  inventory   Inventory?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([categoryId])
  @@index([name])
  @@map("products")
}

// Inventory model for stock management
model Inventory {
  id        String   @id @default(cuid())
  productId String   @unique
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(0)
  reserved  Int      @default(0)
  available Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@map("inventory")
}