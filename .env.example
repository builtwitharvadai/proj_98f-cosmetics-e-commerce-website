# Database Configuration
# PostgreSQL connection string format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL='postgresql://user:password@localhost:5432/cosmetics_db?schema=public'

# Application Environment
# Options: development, production, test
NODE_ENV='development'

# Server Configuration
# Port for the backend API server
PORT='3001'

# Redis Configuration
# Redis connection string for caching and session management
REDIS_URL='redis://localhost:6379'

# Session Configuration
# Secret key for session signing - MUST be changed in production
# Generate a secure random string: openssl rand -base64 32
SESSION_SECRET='your-session-secret-here'

# Authentication
# Secret key for JWT token signing - MUST be changed in production
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET='your-secret-key-here'

# Frontend Configuration
# URL of the frontend application for CORS configuration
FRONTEND_URL='http://localhost:3000'