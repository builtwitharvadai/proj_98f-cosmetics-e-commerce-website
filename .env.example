# Database Configuration
# PostgreSQL connection string format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL='postgresql://user:password@localhost:5432/cosmetics_db?schema=public'

# Application Environment
# Options: development, production, test
NODE_ENV='development'

# Server Configuration
# Port for the backend API server
PORT='3001'

# Redis Configuration
# Redis connection string for caching and session management
REDIS_URL='redis://localhost:6379'

# Session Configuration
# Secret key for session signing - MUST be changed in production
# Generate a secure random string: openssl rand -base64 32
SESSION_SECRET='your-session-secret-here'

# Authentication
# Secret key for JWT token signing - MUST be changed in production
# Generate a secure random string: openssl rand -base64 32 (minimum 32 characters)
JWT_SECRET='your-jwt-secret-here'

# JWT Refresh Token Secret - MUST be different from JWT_SECRET
# Generate a secure random string: openssl rand -base64 32
JWT_REFRESH_SECRET='your-refresh-secret-here'

# JWT Token Expiry Configuration
# Access token expiry time (short-lived for security)
JWT_ACCESS_EXPIRY='15m'

# Refresh token expiry time (long-lived for user convenience)
JWT_REFRESH_EXPIRY='7d'

# Bcrypt Configuration
# Number of salt rounds for password hashing (10 is recommended balance of security and performance)
BCRYPT_SALT_ROUNDS='10'

# Frontend Configuration
# URL of the frontend application for CORS configuration
FRONTEND_URL='http://localhost:3000'

# Cart Configuration
# Tax rate as decimal (e.g., 0.08 = 8%, 0.10 = 10%)
TAX_RATE='0.08'

# Feature Flags
# Enable or disable shopping cart functionality
FEATURE_SHOPPING_CART='true'

# Enable or disable user authentication functionality
FEATURE_USER_AUTH='true'